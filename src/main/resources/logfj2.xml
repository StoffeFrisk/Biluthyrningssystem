<Configuration status="info">
    <properties>
        <property name="layout">%d[%t] %5level %logger - %m%n</property>
    </properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${layout}"/>
        </Console>

        <File name="LogFile" fileName="logs/app.log">
            <PatternLayout pattern="${layout}"/>
        </File>

        <File name="BookingFile" fileName="logs/booking.log">
            <PatternLayout pattern="${layout}"/>
        </File>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LogFile"/>
        </Root>

        <Logger name="SpecialLogger" level="info" additivity="false">
            <AppenderRef ref="SpecialFile"/>
        </Logger>
    </Loggers>
</Configuration>